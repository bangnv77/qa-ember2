{{#if addNewQuestion}}
  <h1>New Question</h1>
  <form>
    <div class="form-group">
      <label for="question">Your Question:</label>
      {{input class="form-control" value=question id="question"}}
    </div>

    <div class="form-group">
      <label for="author">Your Name:</label>
      {{input class="form-control" value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="date">Date:</label>
      {{input class="form-control" value=date id="date"}}
    </div>

    <div class="form-group">
      <label for="notes">Additional Notes:</label>
      {{input class="form-control" value=notes id="notes"}}
    </div>

    <button type="button" class="btn btn-outline btn-primary" {{action 'newQuestionSave1'}}>Save</button>
    <button type="button" class="btn btn-outline btn-infor" {{action 'questionFormHide'}}>Hide</button>
  </form>
{{else}}
    <button type="button" class="btn btn-outline btn-primary" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
